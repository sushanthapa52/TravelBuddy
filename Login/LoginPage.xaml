<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelBuddy.Login.LoginPage"
             Title="LoginPage">
    <StackLayout>
        <Entry x:Name="emailEntry" Text="{Binding Email}" Placeholder="Email" />
        <Entry x:Name="passwordEntry" Text="{Binding Password}" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Label Text="{Binding LoginResult}" />
    </StackLayout>
</ContentPage>