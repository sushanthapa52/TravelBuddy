<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelBuddy.Views.ExistingChecklistPage"
             Title="ExistingChecklistPage"
             xmlns:vm="clr-namespace:TravelBuddy.ViewModel">


    <ContentPage.BindingContext>
        <vm:ExistingChecklistVIewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="20">

        <CollectionView ItemsSource="{Binding SelectedActivityChecklist}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding Name}" />
                    <Switch IsToggled="{Binding IsSelected}" VerticalOptions="Center" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

        <Button Text="Sign Out" 
                BackgroundColor="Red" 
                TextColor="White" 
                Command="{Binding SignOutCommand}" />
    </StackLayout>

</ContentPage>